{% extends 'base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}
    <h1>User List</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('admin_borrow_list', {'id': user.id}) }}" class="btn btn-primary">View Borrowed Books</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
