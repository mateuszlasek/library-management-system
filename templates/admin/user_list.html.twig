{# templates/user/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}
    <div class="p-6 bg-gray-50 min-h-screen">
        <h1 class="text-3xl font-bold text-center text-blue-600 mb-8">User List</h1>

        <div class="overflow-x-auto">
            <table class="w-full bg-white border border-blue-200 rounded-lg shadow-md">
                <thead class="bg-blue-100">
                <tr class="text-left">
                    <th class="px-4 py-2 border-b border-blue-200">Email</th>
                    <th class="px-4 py-2 border-b border-blue-200">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr class="hover:bg-blue-50 transition-colors">
                        <td class="px-4 py-2 border-b border-blue-100">{{ user.email }}</td>
                        <td class="px-4 py-2 border-b border-blue-100">
                            <a href="{{ path('admin_borrow_list', {'id': user.id}) }}" class="text-blue-600 hover:text-blue-800 transition-colors">View Borrowed Books</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" class="px-4 py-2 text-center text-gray-500">No users found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
