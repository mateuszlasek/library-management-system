{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-50">
        <form method="post" class="bg-white p-6 rounded-lg shadow-md w-full max-w-md border border-blue-200">
            {% if error %}
                <div class="bg-red-100 text-red-700 p-3 rounded mb-4">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-4 text-gray-700">
                    You are logged in as <strong>{{ app.user.userIdentifier }}</strong>,
                    <a href="{{ path('app_logout') }}" class="text-blue-600 hover:text-blue-800">Logout</a>
                </div>
            {% endif %}

            <h1 class="text-2xl font-bold text-center mb-6 text-blue-600">Please sign in</h1>

            <div class="mb-4">
                <label for="username" class="block text-gray-700">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="w-full p-2 border border-blue-200 rounded focus:outline-none focus:ring-2 focus:ring-blue-300" autocomplete="email" required autofocus>
            </div>

            <div class="mb-4">
                <label for="password" class="block text-gray-700">Password</label>
                <input type="password" name="_password" id="password" class="w-full p-2 border border-blue-200 rounded focus:outline-none focus:ring-2 focus:ring-blue-300" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="w-full bg-blue-200 hover:bg-blue-300 text-blue-800 hover:text-blue-900 py-2 rounded transition-colors mt-4">
                Sign in
            </button>
        </form>
    </div>
{% endblock %}
