{% extends 'base.html.twig' %}

{% block title %}My account{% endblock %}

{% block body %}

    <div class="text-black bg-white">
        <h1>Add a new book</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">Add book</button>
        {{ form_end(form) }}
    </div>

    <div class="mt-4">
        <h2>Added Books</h2>
        <ul>
            {% for book in books %}
                <li>{{ book.title }}</li>
            {% else %}
                <li>No books have been added yet.</li>
            {% endfor %}
        </ul>
    </div>

{% endblock %}
